@import 'nib'

global-reset()

main-color = #6Be535
background-color = #D4E9C9
main-width = 900px

html, body
    font-family 'Georgia'
    background-color background-color
    color #444

header
    background-color main-color
    border-bottom 1px solid darken(main-color, 30%)
    text-shadow 0px -1px 0px darken(main-color, 30%)

    .title
        font-family 'Helvetica'
        padding 30px 10px
        color #fff
        font-size 25px
        text-align center

.container
    width main-width
    margin 50px auto
    overflow hidden

nav
    border 1px solid darken(main-color, 30%)
    background-color lighten(main-color, 10%)
    font-size 1em 
    height 40px
    line-height 30px
    width: main-width
    margin 0 auto 10px auto
    padding 0
    border-radius 5px

    ul
        list-style none
        margin 0 30px
        li
            float left
            display inline
            margin 0 2px
            a
                display inline-block
                height 30px
                padding 5px 1.5em
                text-decoration none
                font-family 'Helvetica'
                color #fff
                border 1px solid darken(main-color, 30%)
                border-top 0
                border-bottom 0
                background-color lighten(main-color, 10%)
                &:hover
                    background-color main-color

.main-content
    float left
    width main-width - 50px

  p
        margin-bottom 20px

p
    line-height 1.8


footer
    width main-width
    margin 50px auto
    border-top 1px dotted lighten(black, 10%)
    padding-top 5px
    font-size 13px
